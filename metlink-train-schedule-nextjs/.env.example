# Metlink API Configuration
METLINK_API_KEY=your_metlink_api_key_here
METLINK_API_BASE=https://api.opendata.metlink.org.nz/v1

# Public API Base URL (for frontend)
NEXT_PUBLIC_API_BASE=

# Mock Data Mode (for testing alerts without API)
NEXT_PUBLIC_USE_MOCK_DATA=false

# API Configuration
API_TIMEOUT_MS=10000

# Cache Configuration (optional)
CACHE_DURATION_MS=

# Database Configuration (PostgreSQL)
# For local development: postgresql://user:password@localhost:5432/dbname
# For Supabase: postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres
# For Neon: postgresql://[user]:[password]@[neon-hostname]/[dbname]?sslmode=require
# For Railway: Check your Railway project dashboard for the connection string
DATABASE_URL=

# Logging
LOG_LEVEL=INFO

# Node Environment
NODE_ENV=development
